<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="jquery.js"></script>
  <link rel="stylesheet" type="text/css" href="style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
  <script src="socket.io/socket.io.js"></script>
  <title>Document</title>
  <script>
    let name = ''
    function uniCharCode(event) {
      var char = event.which || event.keyCode
      if (char === 13) {
        sendMgs()
      }
    }

    function sendMgs() {
      var data = {
        name,
        msg: $('#inputChat').val()
      }
      socket.emit('chatMessage', data)
      $('#inputChat').val('')
    }


    const socket = io()
    socket.on('list', (list) => {
      if (list.name === name) {
        $('#content').append(' <div class="row">'
          + '<div class="col-xs-6 col-xs-offset-6">'
          + '<div class="alert alert-info" role="alert">' + list.msg + '</div>'
          + '</div>'
          + '</div>'
        )
      } else {
        $('#content').append(' <div class="row">'
          + '<div class="col-xs-1"><img src="images.png" width="50" height="50"></div>'
          + '<div class="col-xs-6">'
          + '<div class="alert alert-success" role="alert">' + list.msg + '</div>'
          + '</div>'
          + '</div>'
        )
      }
      $('#content').scrollTop(100000000000000)

    })

    $(document).ready(() => {
      $('#login').show()
      $('#chat').hide()

      $('#register').click(() => {
        name = $('#name').val()
        if (name) {
          $('#name').val('')
          $('#user').append(name)

          $('#login').hide()
          $('#chat').show()
        }
      })
      $('#bt').click(() => {
        sendMgs(name)
      })
      $('#btResetChat').click(() => {
        $('#content').html('')
      })
    })
  </script>
</head>

<body>
  <div class="container-fluid mg-pd">
    <div class="row">

      <div class="col-xs-2 col-xs-offset-2">
        <div id="login" class="form-group">
          <input type="text" id="name" class="form-control"><br>
          <input type="button" id='register' value="Register user name" class="btn btn-primary">
        </div>
        <h1 id="user"></h1>
        <div id="chat">
          <input type="text" id="inputChat" onkeypress="uniCharCode(event)" class="form-control"
            placeholder="Type something ...">
          <br>
          <input type="button" id='bt' value="Click or Enter" class="btn btn-primary">
        </div>
      </div>

      <form class="col-xs-6" class="form-inline">
        <div id="content">
          <div id="anchor"></div>
        </div>
        <br>
        <br>
        <input type="button" id='btResetChat' value="Reset chat" class="btn btn-primary">
      </form>
    </div>
  </div>

</body>

</html>